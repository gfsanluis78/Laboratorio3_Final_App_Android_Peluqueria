<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ui.b_turno.TurnoDetalleFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/TV_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles del turno"
            android:textAlignment="center"
            android:textSize="30sp"

            />

        <TextView
            android:id="@+id/TV_label_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:paddingLeft="20dp"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/TV_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd/mm/aaaa"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/TV_label_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horario:"
            android:paddingLeft="20dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TV_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hh:mm a hh:mm"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/TV_label_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo:"
            android:paddingLeft="20dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TV_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$400.00"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TV_label_cliente"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cliente"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_cliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#F1F1EC"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_cliente_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_cliente_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_cliente_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_cliente_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TV_label_profesional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profesional"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/CV_profesional"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#F1F1EC"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_profesional_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_profesional_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_profesional_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_profesional_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TV_label_trabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/CV_trabajo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#F1F1EC"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_trabajo_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_trabajo_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>