<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.b_turno.TurnoByFechaFragment">

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/TV_label_elija_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Elija un dia para consultar turnos..."
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/calendarView_elejir_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_calendar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_turnos_fecha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" />


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>