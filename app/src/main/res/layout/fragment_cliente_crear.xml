<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scroll"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="8dp"
android:background="@color/white">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.c_cliente.ClienteCrearFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titulo_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo cliente"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/nombre_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/ET_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:textStyle="bold"
            android:padding="20dip"/>
        <TextView
            android:id="@+id/apellido_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido:"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/ET_apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Apellido"
            android:textStyle="bold"
            android:padding="20dip"/>

        <TextView
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/ET_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Email"
            android:textStyle="bold"
            android:padding="20dip"/>
        <TextView
            android:id="@+id/dni_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dni::"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/ET_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Dni"
            android:textStyle="bold"
            android:padding="20dip"/>
        <TextView
            android:id="@+id/telefono_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/ET_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Telefono"
            android:textStyle="bold"
            android:padding="20dip"/>

        <TextView
            android:id="@+id/foto_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto:"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars"

            />

        <Button
            android:id="@+id/BT_subir_foto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_span="2"
            android:text="Subir foto"
            android:onClick="tomarFoto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/BT_guardar_cliente"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="70dp"
            android:text="Guardar cliente"
            android:textSize="20sp"
            android:layout_span="2">
        </Button>
        />

    </LinearLayout>
</FrameLayout>
</ScrollView>
