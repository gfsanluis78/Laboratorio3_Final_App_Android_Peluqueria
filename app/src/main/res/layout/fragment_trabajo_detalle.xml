<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.i_trabajo.TrabajoDetalleFragment">


<ImageView
    android:id="@+id/IV_foto"
    android:paddingBottom="10dp"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:tooltipText="foto" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</androidx.constraintlayout.widget.ConstraintLayout>

<TextView
    android:id="@+id/TV_titulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Detalles del Trabajo"
    android:textAlignment="center"
    android:textSize="30sp"

    />

<TextView
    android:id="@+id/TV_label_nombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:text="Nombre:"
    android:textSize="15sp"

    />

<TextView
    android:id="@+id/TV_tipo_trabajo_nombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="nombre..."
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:textSize="20sp"
    android:textStyle="bold"

    />

<TextView
    android:id="@+id/TV_label_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Id:"
    android:paddingLeft="20dp"
    android:textSize="15sp" />

<TextView
    android:id="@+id/TV_tipo_trabajo_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Id..."
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:textSize="20sp"
    android:textStyle="bold"

    />

<TextView
    android:id="@+id/TV_label_descripcion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Descricpcion..."
    android:paddingLeft="20dp"
    android:textSize="15sp" />

<TextView
    android:id="@+id/TV_tipo_trabajo_descripcion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Descripcion..."
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:textSize="20sp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/TV_label_duracion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Duracion:"
    android:paddingLeft="20dp"
    android:textSize="15sp"
    />

<TextView
    android:id="@+id/TV_tipo_trabajo_duracion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Duracion..."
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:textSize="20sp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/TV_label_costo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Costo..."
    android:paddingLeft="20dp"
    android:textSize="15sp"
    />
<TextView
    android:id="@+id/TV_tipo_trabajo_costo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Costo"
    android:paddingLeft="20dp"
    android:paddingBottom="10dp"
    android:textSize="20sp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/TV_profesionales_trabajan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Profesionales que realizan este tipo de trabajo"
    android:paddingLeft="20dp"
    android:textSize="15sp"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_empleados_trabajos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
    </ScrollView>